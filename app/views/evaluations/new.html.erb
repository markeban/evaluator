
<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-8">
      <h1>Send New Evaluation</h1>

      
         <%= bootstrap_form_for @evaluation do |f| %> 
          <% if !(@template_select.to_a.empty?) %>
           <div><%= f.select :template_id, @template_select %></div>
          <% else %>
          <p>You'll need to add an template to get started <%= link_to "here",new_template_path %>.</p>
          <% end %>
          <div class="helper-dropdown">
            <%= link_to "Click here", new_template_path %> to add a new template.
          </div>
          <br>
          <% if !(@teacher_select.to_a.empty?) %>
           <div><%= f.select :teacher_id, @teacher_select, label: "Organization, Group, Instructor, etc." %></div>
          <% else %>
          <p>You'll need to add an instructor to get started.</p>
          <% end %>
          <div class="helper-dropdown">
            <%= link_to "Click here", new_teacher_path %> to add a new organization, group, employee, etc.
          </div>
          <br>
          <div>
            <%= f.submit 'Create Evaluation' %>
          </div>
        <% end %>
       
      

    </div>

</div>