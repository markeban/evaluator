.landing-col {
  background-size:100% auto;
  background-image: url("<%= asset_path('acltc.jpg') %>");
  background-repeat: no-repeat;
  min-height: 700px;
  margin:0;
  padding:0px;
}

#content {
  padding: 0px;
}

.container-fluid {
  padding: 0px;
  min-height: 600px;
}

.centered {
  width: 40%;
  margin: 10% 10% 0 0;
  text-align: left;
  font-size: 16px;
  color: #FFFFFF;
  background: #8EC1B9;
  opacity:0.9;
  border-radius:25px;
  padding: 20px 20px 20px 20px;
  display: inline-block;
  z-index: 3px;
  float: right;
}

.welcome {
  font-size: 48px;
  color: #FFFFFF;
}

.line-separator {

height:3px;

background:#FFFFFF;

border-bottom:1px solid #313030;
margin-bottom:20px;

}